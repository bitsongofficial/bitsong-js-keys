{
  "name": "bitsong-js-keys",
  "version": "0.0.1",
  "description": "JS version of BitSong Wallet signer and address generation",
  "keywords": [
    "cosmos",
    "bitsong",
    "bitsong.network",
    "bitsong wallet",
    "bitsong signer",
    "bitsong js",
    "bitsong sdk",
    "cosmos.network",
    "cosmos wallet",
    "cosmos signer",
    "cosmos javascript",
    "cosmos sdk",
    "cosmos-sdk"
  ],
  "main": "lib/bitsong-js-keys.js",
  "typings": "lib/types/bitsong-js-keys.d.ts",
  "scripts": {
    "lint": "tslint --project tsconfig.json -t codeFrame 'src/**/*.ts' 'test/**/*.ts'",
    "lint:fix": "tslint --fix --project tsconfig.json -t codeFrame 'src/**/*.ts' 'test/**/*.ts'",
    "prebuild": "rimraf lib",
    "build": "webpack",
    "test": "jest --coverage",
    "test:watch": "jest --coverage --watch",
    "test:prod": "npm run lint && npm run test -- --no-cache",
    "report-coverage": "cat ./coverage/lcov.info | coveralls",
    "prepublishOnly": "npm run build",
    "log": "simsala log",
    "release": "git checkout develop & git pull & git push origin develop:release"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/bitsongofficial/bitsong-js-keys.git"
  },
  "files": [
    "lib"
  ],
  "author": "Angelo Recca <hello@bitsong.io>",
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/bitsongofficial/bitsong-js-keys/issues"
  },
  "homepage": "https://github.com/bitsongofficial/bitsong-js-keys#readme",
  "prettier": {
    "semi": false,
    "singleQuote": true
  },
  "dependencies": {
    "bech32": "^1.1.3",
    "bip32": "^1.0.4",
    "bip39": "^3.0.2",
    "crypto-js": "^3.1.9-1",
    "secp256k1": "^3.7.1"
  },
  "devDependencies": {
    "@types/bech32": "^1.1.1",
    "@types/bip32": "^1.0.2",
    "@types/bip39": "^2.4.2",
    "@types/crypto-js": "^3.1.43",
    "@types/jest": "^23.3.2",
    "@types/node": "^10.11.0",
    "@types/secp256k1": "^3.5.0",
    "coveralls": "^3.0.2",
    "cross-env": "^5.2.0",
    "husky": "^1.0.1",
    "jest": "^23.6.0",
    "jest-config": "^23.6.0",
    "jest-localstorage-mock": "^2.4.0",
    "lint-prepush": "^0.4.1",
    "lodash.camelcase": "^4.3.0",
    "prettier": "^1.14.3",
    "rimraf": "^2.6.2",
    "ts-jest": "^23.10.2",
    "ts-loader": "^6.0.2",
    "ts-node": "^7.0.1",
    "tslint": "^5.11.0",
    "tslint-config-prettier": "^1.15.0",
    "tslint-config-standard": "^8.0.1",
    "typedoc": "^0.12.0",
    "typescript": "^3.5.1",
    "webpack": "^4.32.2",
    "webpack-cli": "^3.3.2"
  }
}
